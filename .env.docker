# Configurações do Prato Rápido SaaS - Docker
# Copie este arquivo para .env e configure suas variáveis

#--------------------------------------------------------------------
# DOMÍNIO PRINCIPAL
#--------------------------------------------------------------------
DOMAIN=seudominio.com

#--------------------------------------------------------------------
# BANCO DE DADOS
#--------------------------------------------------------------------
DB_NAME=prato_rapido
DB_USER=prato_user
DB_PASS=sua_senha_segura_123
DB_ROOT_PASS=root_senha_muito_segura_456

#--------------------------------------------------------------------
# REDIS
#--------------------------------------------------------------------
REDIS_PASS=redis_senha_segura_789

#--------------------------------------------------------------------
# CODEIGNITER 4 ENVIRONMENT
#--------------------------------------------------------------------
CI_ENVIRONMENT=production

#--------------------------------------------------------------------
# ENCRYPTION
#--------------------------------------------------------------------
encryption.key=hex2bin:sua_chave_de_32_caracteres_aqui_123456789abcdef

#--------------------------------------------------------------------
# DATABASE
#--------------------------------------------------------------------
database.default.hostname=mysql
database.default.database=prato_rapido
database.default.username=prato_user
database.default.password=sua_senha_segura_123
database.default.DBDriver=MySQLi
database.default.DBPrefix=
database.default.port=3306

#--------------------------------------------------------------------
# CACHE
#--------------------------------------------------------------------
cache.handler=redis
cache.redis.host=redis
cache.redis.password=redis_senha_segura_789
cache.redis.port=6379
cache.redis.timeout=0

#--------------------------------------------------------------------
# SESSION
#--------------------------------------------------------------------
session.driver=Redis
session.cookieName=prato_rapido_session
session.expiration=7200
session.savePath=tcp://redis:6379?auth=redis_senha_segura_789
session.matchIP=false
session.timeToUpdate=300
session.regenerateDestroy=false

#--------------------------------------------------------------------
# LOGGER
#--------------------------------------------------------------------
logger.threshold=4

#--------------------------------------------------------------------
# EMAIL (Configure com seu provedor)
#--------------------------------------------------------------------
email.fromEmail=noreply@seudominio.com
email.fromName="Prato Rápido SaaS"
email.SMTPHost=smtp.gmail.com
email.SMTPUser=seu-email@gmail.com
email.SMTPPass=sua-senha-app
email.SMTPPort=587
email.SMTPCrypto=tls

#--------------------------------------------------------------------
# CORS (para API)
#--------------------------------------------------------------------
cors.allowedOrigins=https://app.seudominio.com,https://admin.seudominio.com
cors.allowedMethods=GET,POST,PUT,DELETE,OPTIONS
cors.allowedHeaders=Content-Type,Authorization,X-Requested-With

#--------------------------------------------------------------------
# JWT (para API)
#--------------------------------------------------------------------
jwt.secret=sua_chave_jwt_super_secreta_aqui_123456789
jwt.expire=3600

#--------------------------------------------------------------------
# UPLOAD
#--------------------------------------------------------------------
upload.maxSize=10485760
upload.allowedTypes=jpg,jpeg,png,gif,pdf
upload.path=uploads/

#--------------------------------------------------------------------
# SAAS SETTINGS
#--------------------------------------------------------------------
saas.multiTenant=true
saas.defaultPlan=basic
saas.trialDays=14

#--------------------------------------------------------------------
# PAYMENT (Configure com seu gateway)
#--------------------------------------------------------------------
payment.gateway=stripe
payment.stripe.publicKey=pk_test_sua_chave_publica
payment.stripe.secretKey=sk_test_sua_chave_secreta
payment.webhook.secret=whsec_sua_chave_webhook

#--------------------------------------------------------------------
# BACKUP
#--------------------------------------------------------------------
backup.enabled=true
backup.schedule=daily
backup.retention=30
backup.s3.bucket=prato-rapido-backups
backup.s3.region=us-east-1
backup.s3.key=sua_aws_access_key
backup.s3.secret=sua_aws_secret_key

#--------------------------------------------------------------------
# MONITORING
#--------------------------------------------------------------------
monitoring.enabled=true
monitoring.sentry.dsn=https://sua_sentry_dsn@sentry.io/projeto

#--------------------------------------------------------------------
# SECURITY
#--------------------------------------------------------------------
security.csrfProtection=true
security.csrfTokenName=csrf_token
security.csrfCookieName=csrf_cookie
security.csrfExpire=7200
security.csrfRegenerate=true

#--------------------------------------------------------------------
# RATE LIMITING
#--------------------------------------------------------------------
rateLimit.enabled=true
rateLimit.requests=100
rateLimit.period=3600

#--------------------------------------------------------------------
# FEATURE FLAGS
#--------------------------------------------------------------------
features.multiTenant=true
features.analytics=true
features.notifications=true
features.integrations=true
features.api=true